#wrapper
    #shop
        // PAGE TITLE
        header#page-title
            .container
                h1 Leave
                    strong Benefits
                //ul.breadcrumb
                    li.active Admin
                    li.active Manage Leaves
                    li.active Add Leave
        section.container
            .row
                .col-lg-12
                    .panel.panel-info.table-bordered
                        .panel-body
                            form#leaveForm(
                            name='leaveBenefitsForm',
                            type='form',
                            class='form-horizontal',
                            ng-submit=''
                            )
                                .form-group.has-warning
                                    label.control-label(for='level')
                                        | Level
                                        span(style='color:red') *
                                    div(ng-class="{ 'has-error' : leaveBenefitsForm.level.$invalid }")
                                        select.form-control(
											name='level',
											ng-model='benefits.level',
											ng-selected = 'Select',
											ng-options='c.levelName as c.levelName for c in Levels',
											required)
                                            option(value='',selected) --   Select Level   --
                                        small(
											class="label label-danger",
											ng-show="leaveBenefitsForm.level.$invalid && leaveBenefitsForm.level.$dirty"
										)
                                .form-group.has-warning
                                    label.control-label(for='Designation')
                                        | Designation
                                        span(style='color:red') *
                                    div(ng-class="{ 'has-error' : leaveBenefitsForm.designation.$invalid }")
                                        select.form-control(
											name="designation",
											ng-model="benefits.designations",
											ng-options="c.desigName as c.desigName for c in Designations",
											required)
                                            option(value='',selected) ---  Select Designation   ---
                                .form-group.has-warning
                                    label.control-label(for='leave-Benefits')
                                        | Leave Benefits
                                        span(style='color:red') *
                                    div(ng-class="{ 'has-error' : leaveBenefitsForm.levelBenefits.$invalid }")
                                        input(
                                        type='checkbox',
                                        name=levelBenefits,
                                        ng-model='leaveBenefits.Medical'
                                        )
                                        | &nbsp;
                                        | Medical
                                        | &nbsp;
                                        input(
                                        type='checkbox',
                                        name=levelBenefits,
                                        ng-model='leaveBenefits.family'
                                        )
                                        | &nbsp;
                                        | Medical
                                        | &nbsp;
                                        input(
                                        type='checkbox',
                                        name=levelBenefits,
                                        ng-model='leaveBenefits.personal'
                                        )
                                        | &nbsp;
                                        | Personal
                                        | &nbsp;
                                        input(
                                        type='checkbox',
                                        name=levelBenefits,
                                        ng-model='leaveBenefits.professional'
                                        )
                                        | &nbsp;
                                        | Professional Leave
                                        | &nbsp;
                                        small(
                                        class="label label-danger",
                                        ng-show='leaveBenefitsForm.levelBenefits.$invalid && leaveBenefitsForm.levelBenefits.$dirty'
                                        ) Requried
                                div
                                    button.btn.btn-info(ng-click="createNew()", style="margin-right: 10px")
                                        i.icon-user.icon-white
                                        | Add
                                    input.btn.btn-warning(type='reset',value='Reset')
