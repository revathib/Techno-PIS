#wrapper
	#shop
		// PAGE TITLE
		header#page-title
			.container
				h1 Leave
					strong Benefits
				//ul.breadcrumb
					li.active Admin
					li.active Manage Leaves
					li.active Add Leave
		section.container
			.row
				.col-lg-12
					.panel.panel-info.table-bordered
						.panel-body
							form#leaveForm(
								name='leaveBenefitsForm',
								type='form',
								class='form-horizontal',
								ng-submit=''
							)
								.form-group.has-warning
									label.control-label(for='level')
										| Level
										span(style='color:red') *
									div(ng-class="{ 'has-error' : leaveBenefitsForm.level.$invalid }")
										input.form-control(
											ng-model='benefits.level',
											type='text',
											name='level',
											placeholder='Level',
											required,
											autofocus
										)
										small(
											class="label label-danger",
											ng-show="leaveBenefitsForm.level.$invalid && leaveBenefitsForm.level.$dirty"
										) Level Requried
								.form-group.has-warning
									label.control-label(for='Designation')
										| Designation
										span(style='color:red') *
									div(ng-class="{ 'has-error' : leaveBenefitsForm.designation.$invalid }")
										input.form-control(
											ng-model='leave.type',
											type='text',
											name='designation',
											placeholder='Designation',
											required
										)
										small(
											class="label label-danger",
											ng-show="leaveBenefitsForm.designation.$invalid && leaveBenefitsForm.designation.$dirty"
										) Requried Designation
								.form-group.has-warning
									label.control-label(for='leave-Benefits')
										| Leave Benefits
										span(style='color:red') *

									div(ng-class="{ 'has-error' : leaveBenefitsForm.levelBenefits.$invalid }")
										input(
											type='checkbox',
											name=levelBenefits,
											ng-model='leaveBenefits.Medical'
										)
										| &nbsp;
										| Medical
										| &nbsp;
										input(
											type='checkbox',
											name=levelBenefits,
											ng-model='leaveBenefits.family'
										)
										| &nbsp;
										| Family
										| &nbsp;
										input(
											type='checkbox',
											name=levelBenefits,
											ng-model='leaveBenefits.personal'
										)
										| &nbsp;
										| Personal
										| &nbsp;
										input(
											type='checkbox',
											name=levelBenefits,
											ng-model='leaveBenefits.professional'
										)
										| &nbsp;
										| Professional Leave
										| &nbsp;
										small(
											class="label label-danger",
											ng-show='leaveBenefitsForm.levelBenefits.$invalid && leaveBenefitsForm.levelBenefits.$dirty'
										) Requried
							div
								button.btn.btn-info(ng-click="createNew()", style="margin-right: 10px")
									i.icon-user.icon-white
									| Add
								button.btn.btn-warning(type='button', onclick='cancelApply()') Reset

