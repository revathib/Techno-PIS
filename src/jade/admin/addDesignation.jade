#wrapper
    #shop
        // PAGE TITLE
        header#page-title
            .container
                h1 Add
                    strong Designation
        section.container
            .row
                .col-lg-12
                    .panel.panel-info
                        .panel-body
                            form#designationForm(name='addDesignationForm',class='form-horizonal',role='form',ng-submit='createDesignation()',novalidate)
                                .form-group.has-warning
                                    label.control-label(for='department')
                                    | Department
                                    span(style='color:red') *
                                    select#department.form-control(name='department',ng-options='department in departments',ng-model='designation.department',required,autofocus)
                                .form-group.has-warning
                                    label.control-label(for='designation') Designation
                                        span(style='color:red') *
                                    div(ng-class="{ 'has-error' : addDesignationForm.desigName.$invalid }")
                                        input.form-control(type="text",name="desigName",placeholder="Designation Name",ng-model="designation.name",required)
                                        small(class="label label-danger",ng-show="addDesignationForm.desigName.$invalid && addDesignationForm.desigName.$dirty")
                                            | Designation Name required
                                .form-group.has-warning
                                    label.control-label(for="name") Description
                                    textarea.form-control(type='text', ng-model="designation.description" name='description', placeholder='Description')
                                div
                                    button.btn.btn-info(style='margin-right: 10px', ng-click="createNew()")
                                        | Add
                                    input.btn.btn-warning(type='reset',value='Reset')