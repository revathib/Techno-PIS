#wrapper
    #shop
        // PAGE TITLE
        header#page-title
            .container
                h1 Add
                    strong Shift
                //ul.breadcrumb
                    li.active Admin
                    li.active Manage Shift
                    li.active Add Shift
        section.container
            .row
                .col-lg-12
                    .panel.panel-info
                        .panel-body
                            form#shiftForm(ng-submit='createShift()',name='addShiftForm',type='form',class='form-horizonal')
                                .form-group.has-warning
                                    label.control-label(for='shift-type')
                                        | Shift Type
                                        span(style='color:red') *
                                    div(ng-class="{ 'has-error' : addShiftForm.shiftType.$invalid }")
                                        input#shiftType.form-control(type='text',name='shiftType',ng-model='shift.type',placeholder='Shift Type',required,autofocus)
                                        small(class="label label-danger",ng-show="addShiftForm.shiftType.$invalid && addShiftForm.shiftType.$dirty") Required Shift Type
                                .form-group.has-warning
                                    label.control-label(for='shift-start')
                                        | Shift Start
                                        span(style='color:red') *
                                    div(ng-class="{ 'has-error' : addShiftForm.shiftStart.$invalid }")
                                        input#shiftStart.form-control(type='time',name='shiftStart',ng-model='shift.start',placeholder='Shift Start',required)
                                        small(class="label label-danger",ng-show="addShiftForm.shiftStart.$invalid && addShiftForm.shiftStart.$dirty") Required Start Time
                                .form-group.has-warning
                                    label.control-label(for='shift-end')
                                        | Shift End
                                        span(style='color:red') *
                                    div(ng-class="{ 'has-error' : addShiftForm.shiftEnd.$invalid }")
                                        input#shiftEnd.form-control(type='time',name='shiftEnd',ng-model='shift.end',placeholder='Shift End',required)
                                        small(class="label label-danger",ng-show="addShiftForm.shiftEnd.$invalid && addShiftForm.shiftEnd.$dirty") Required End Time
                                .form-group.has-warning
                                    label.control-label
                                        | Description
                                    textarea#departmentDescription.form-control(type='text',name='description',placeholder='Description')
                                div
                                    button.btn.btn-info(type='submit',style='margin-right: 10px')
                                        | Add
                                    input.btn.btn-warning(type='reset', value='Reset')