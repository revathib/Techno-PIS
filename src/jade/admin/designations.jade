#wrapper
    #shop
    // PAGE TITLE
    header#page-title
        .container
            h1
                strong Designations
            ul.breadcrumb
                li.active Admin
                li.active Designations
    section.container
        .row
            .col-lg-12
                table#designationsTable.table.table-bordered.table-hover.table-striped.tablesorter(ng-table='manageDesignation')
                    tr(ng-repeat='desig in designations')
                        td(data-title='"Designation Id"', sortable='"designationId"') {{desig.desigId}}
                        td(data-title='"Designation Name"', sortable='"name"') {{desig.desigName}}
                        td(data-title='"Description"') {{desig.description}}
                        td(data-title='"Department"',sortable='"depart"') {{desig.deptName}}
                        td(data-title='"#"')
                            a(href='#/adminAddDesignation/{{desig.desigId}}') Edit
