#wrapper
    #shop
        // PAGE TITLE
        header#page-title
            .container
                h1 Add
                    strong Loan
                ul.breadcrumb
                    li.active Admin
                    li.active Manage Loans
                    li.active Add Loan
        section.container
            .row
                .col-lg-12
                    .panel.panel-info
                        .panel-body
                            form#loanForm(name='addLoanForm',class='form-horizonal',type='form',novalidate)
                                .form-group.has-warning
                                    label.control-label(for='loan-type')
                                        | Loan Type
                                        span(style='color:red') *
                                    div(ng-class="{ 'has-error' : addLoanForm.loanType.$invalid }")
                                        input#loanType.form-control(type='text',name='loanType',ng-model='loan.type',placeholder='Loan Type',required,autofocus)
                                        small(class="label label-danger",ng-show="addLoanForm.loanType.$invalid && addLoanForm.loanType.$dirty") Required Loan Type
                                .form-group.has-warning
                                    label.control-label(for='loan-rateOfInterest')
                                        | Rate of Interest
                                        span(style='color:red') *
                                    div(ng-class="{ 'has-error' : addLoanForm.rateOfInterest.$invalid }")
                                        input#rateOfInterest.form-control(type='number',name='rateOfInterest',ng-model='loan.rateOfInterest',placeholder='Rate of Interest',required,min=0,max=100)
                                        small(class="label label-danger",ng-show="addLoanForm.rateOfInterest.$invalid && addLoanForm.rateOfInterest.$dirty") Requried rate Of Interest
                                .form-group.has-warning
                                    label.control-label(for='loan-description')
                                        | Description
                                    textarea#loanDescription.form-control(type='text',ng-model='loan.description',name='loanDescription',placeholder='Description')
                                div
                                    button.btn.btn-info(type='button', ng-click="createNew()", style="margin-right: 10px")
                                        | Add
                                    input.btn.btn-warning(type='reset',value='Reset')