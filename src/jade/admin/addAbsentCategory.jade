#wrapper
    #shop
        // PAGE TITLE
        header#page-title
            .container
                h1 Add
                    strong Absent Category
                ul.breadcrumb
                    li.active Admin
                    li.active Leaves
                    li.active Add Absent Category
        section.container
            .row
                .col-lg-12
                    .panel.panel-info
                        .panel-body
                            form#absentForm(
                            name='addAbsentForm',
                            type='form',
                            class='form-horizontal',
                            ng-submit='createAbsent()'
                            )
                                .form-group.has-warning
                                    label.control-label(for='category-code')
                                        | Absent Category Code
                                        span(style='color:red') *
                                    div(ng-class="{ 'has-error' : addAbsentForm.categoryCode.$invalid }")
                                        input#categoryCode.form-control(
                                        ng-model='category.code',
                                        type='text',
                                        name='categoryCode',
                                        placeholder='Absent Category Code',
                                        required,
                                        autofocus)
                                        small(
                                        class="label label-danger",
                                        ng-show="addAbsentForm.categoryCode.$invalid && addAbsentForm.categoryCode.$dirty") Absent category Code Requried
                                .form-group.has-warning
                                    label.control-label(for='category-name')
                                        | Absent Category Name
                                        span(style='color:red') *
                                    div(ng-class="{ 'has-error' : addAbsentForm.categoryName.$invalid }")
                                        input#categoryName.form-control(
                                        ng-model='category.name',
                                        type='text',
                                        name='categoryName',
                                        placeholder='Absent Category Name',
                                        required
                                        )
                                        small(
                                        class="label label-danger",
                                        ng-show="addAbsentForm.categoryName.$invalid && addAbsentForm.categoryName.$dirty"
                                        ) Requried Leave Type

                                div
                                    button.btn.btn-info(ng-click="createNew()", style="margin-right: 10px")
                                        i.icon-user.icon-white
                                        | Add
                                    input.btn.btn-warning(type='reset',value='Reset')
