#wrapper
    #shop
        // PAGE TITLE
        header#page-title
            .container
                h1 Add
                    strong Departments
                    //ul.breadcrumb
                        li.active Admin
                        li.active Manage Departments
                        li.active Add Departments
        section.container
            .row
                .col-lg-12
                    .panel.panel-info
                        .panel-body
                            form#departmentForm(name="addDepartmentForm",class="form-horizontal",role="form",ng-submit='createNewDepartment()',novalidate)
                                .form-group.has-warning
                                    label.control-label(for="department-name")
                                        | Department Name
                                        span(style='color:red') *
                                    div(ng-class="{ 'has-error' : addDepartmentForm.deptName.$invalid }")
                                        input#deptName.form-control(type="text",name="deptName",placeholder="Department Name",ng-model="deptName",required)
                                        small(class="label label-danger",ng-show="addDepartmentForm.deptName.$invalid && addDepartmentForm.deptName.$dirty") Department name required
                                //.form-group.has-warning
                                //    label.control-label(for='department-name')
                                //        | Department Name
                                //        span(style='color:red') *
                                //    input#departmentName.form-control(type='text', name='departmentName', placeholder='Department name', required='', autofocus='')
                                .form-group.has-warning
                                    label.control-label(for='department-description')
                                        | Description
                                    textarea#departmentDescription.form-control(type='text', name='description', placeholder='Description', ng-model='departmentDescription')
                                div
                                    button.btn.btn-info(style='margin-right: 10px', ng-click="createNew()")
                                        | Add
                                    input.btn.btn-warning(type='reset',value='Reset')