#wrapper
    #shop
    // PAGE TITLE
    header#page-title
        .container
            h1
                strong Leaves
            ul.breadcrumb
                li.active Admin
                li.active Leaves
    section.container
        .row
            .col-lg-12
                table.table.table-bordered.table-hover.table-striped.tablesorter(ng-table)
                    tr(ng-repeat='loan in loans')
                        td(data-title="'Loan Id'") {{loan.loanId}}
                        td(data-title="'Loan Type'") {{loan.loanType}}
                        td(data-title="'Rate of Interest'") {{loan.rateOfInterest}}
                        td(data-title="'From Date'") {{loan.fromDate}}
                        td(data-title="'To Date'") {{loan.toDate}}
                        td(data-title="'Description'") {{loan.description}}
                        td(data-title="'#'")
                            a(href='#/adminAddleave/{{leave.leaveId}}') Edit