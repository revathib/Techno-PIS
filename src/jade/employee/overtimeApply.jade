#wrapper
    #shop
        // PAGE TITLE
        header#page-title
            .container
                h1 Employee
                    strong Overtime
                ul.breadcrumb
                    li.active Employee
                    li.active Overtime Apply
        section.container
            form(ng-submit="submit()")
                .col-lg-12
                    .panel.panel-info.table-bordered
                        .panel-body
                            .col-lg-12
                                .alert.alert-success(ng-show="overtime")
                                    i.fa.fa-check-circle-o
                                    | Overtime Application Submitted Successfully
                            .col-lg-4
                                .form-group.has-warning
                                    label.control-label(for='date') Date
                                    input#date.form-control(type='date', name='date', ng-model="application.date", required)
                            .col-lg-4
                                .form-group.has-warning
                                    label.control-label(for='from') From
                                    input#from.form-control(type='time', name='from', ng-model="application.from", required)
                            .col-lg-4
                                .form-group.has-warning
                                    label.control-label(for='to') To
                                    input#to.form-control(type='time', name='to', ng-model="application.to", required)
                            .col-lg-12
                                .form-group.has-warning
                                    label.control-label(for='reason') Reason
                                    textarea#reason.form-control(name='reason', ng-model="application.reason", required)
                            .col-lg-4
                            .col-lg-12(align='center')
                                .form-group.has-success
                                    button.btn.btn-success(type='submit') Apply
            .col-lg-12
                .panel.panel-info.table-bordered
                    .panel-body
                        table#dataTableOvertimeApply.table.table-bordered.table-hover.table-striped(ng-table='dataTableOvertimeApply', show-filter='true')
                            tr(ng-repeat='app in $data')
                                td(data-title='"Date"', sortable='"date"', filter='{ "date": "text" }')
                                    | {{app.date}}
                                td(data-title='"From"', sortable='"from"', filter='{ "from": "text" }')
                                    | {{app.from}}
                                td(data-title='"To"', sortable='"to"', filter='{ "to": "text" }')
                                    | {{app.to}}
                                td(data-title='"Reason"', sortable='"reason"', filter='{ "reason": "text" }')
                                    | {{app.reason}}
                                td(data-title='"Status"', style='vertical-align: -webkit-baseline-middle;text-overflow: ellipsis;white-space: nowrap;')
                                    | {{app.status}}
                                    a.btn.btn-small(ng-show="(app.status=='applied')") Cancel
