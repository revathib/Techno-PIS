#wrapper
    #shop
        // PAGE TITLE
        header#page-title
            .container
                h1 Employee
                    strong Reimbursement
                ul.breadcrumb
                    li.active HR
                    li.active Reimbursement Management
                    li.active Employee Reimbursement

        section.container
            .row
                div.col-lg-12
                    .panel.panel-info.table-bordered
                        .panel-heading
                            | EmpID : {{empID}}
                            .pull-right Application Date : {{applicationDate}}
                        .panel-body
                            .col-lg-6
                                .form-group.has-warning
                                    label.control-label(for='reimbursementType') Reimbursement Type
                                    select#reimbursementType.form-control(name='reimbursementType', ng-init='{{application.reimbursementType}}', ng-options='reimbursementType in reimbursementTypes', required, autofocus)
                            .col-lg-6
                                .form-group.has-warning
                                    label.control-label(for='amount') Amount
                                    input#amount.form-control(type='text', name='amount', ng-model="application.amount",value='{{application.amount}}', required)
                            .col-lg-4
                            .col-lg-4
                                .form-group.has-success
                                    button.btn.btn-success(ng-click="Approve()") Approve
                                    |&nbsp;|&nbsp;
                                    button.btn.btn-danger(ng-click="Reject()") Reject
                        .panel-footer


                            table.table.table-bordered.table-hover.table-striped.tablesorter(ng-table)
                                thead
                                    tr
                                        th Reimbursement Type
                                        th Amount
                                        th Status
                                tbody(ng-repeat='app in applications')
                                    tr
                                        td {{app.reimbursementType}}
                                        td {{app.amount}}
                                        td {{app.status}}



