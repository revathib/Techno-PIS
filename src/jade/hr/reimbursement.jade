#wrapper
    #shop
        // PAGE TITLE
        header#page-title
            .container
                h1 Reimbursement
                    strong Management
                ul.breadcrumb
                    li.active HR
                    li.active Reimbursement Management
        section.container
            .row
                .col-lg-12
                    table.table.table-bordered.table-hover.table-striped.tablesorter(ng-table)
                        thead
                            tr
                                th EmpId
                                th Name
                                th Reimbursement Type
                                th Application Date
                                th Amount
                                th Options
                        tbody(ng-repeat='app in applications')
                            tr
                                td {{app.empId}}
                                td {{app.name}}
                                td {{app.reimbursementType}}
                                td {{app.applicationDate}}
                                td {{app.amount}}
                                td
                                    a(href='#/hrReimbursement/{{app.ApplicationID}}') Show Details


