#wrapper
    #shop
        // PAGE TITLE
        header#page-title
            .container
                h1 Employee
                    strong Leave
                ul.breadcrumb
                    li.active HR
                    li.active Leave Management
                    li.active Employee Leave

        section.container
            form(ng-submit="submit()")
                div.col-lg-12
                    .panel.panel-info.table-bordered
                        .panel-heading
                            | EmpID : {{application.empID}}
                            .pull-right Application Date : {{application.applicationDate}}
                        .panel-body
                            .col-lg-4
                                .form-group.has-warning
                                    label.control-label(for='fromDate') From Date
                                    input#fromDate.form-control(type='date', name='fromDate', ng-model="application.fromDate", value='{{application.fromDate}}', readonly, autofocus)
                            .col-lg-4
                                .form-group.has-warning
                                    label.control-label(for='toDate') To Date
                                    input#toDate.form-control(type='text', name='toDate', ng-model="application.toDate",value='{{application.toDate}}', readonly)
                            .col-lg-4
                                .form-group.has-warning
                                    label.control-label(for='leaveType') Leave Type
                                    input#leaveType.form-control(type='text', name='leaveType', ng-model="application.leaveType", value='{{application.leaveType}}', readonly)
                            .col-lg-12(align='center')
                                .form-group.has-success
                                    button.btn.btn-success(ng-click="Action('Approve')") Approve
                                    |&nbsp;|&nbsp;
                                    button.btn.btn-danger(ng-click="Action('Reject')") Reject
                        .panel-footer
                            table#dataTableHrLeaveEmp.table.table-bordered.table-hover.table-striped(ng-table='dataTableHrLeaveEmp', show-filter='true')
                                tr(ng-repeat='app in $data')
                                    td(data-title='"From Date"', sortable='"from"', filter='{ "from": "text" }')
                                        | {{app.fromDate}}
                                    td(data-title='"To Date"', sortable='"to"', filter='{ "to": "text" }')
                                        | {{app.toDate}}
                                    td(data-title='"Total Days"', sortable='"totalDays"', filter='{ "totalDays": "text" }')
                                        | {{app.totalDays}}
                                    td(data-title='"Leave Type"', sortable='"leaveType"', filter='{ "leaveType": "text" }')
                                        | {{app.leaveType}}
                                    td(data-title='"Status"', sortable='"status"')
                                        | {{app.status}}



