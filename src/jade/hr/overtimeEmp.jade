#wrapper
    #shop
        // PAGE TITLE
        header#page-title
            .container
                h1 Employee
                    strong Overtime
                ul.breadcrumb
                    li.active HR
                    li.active Overtime Management
                    li.active Employee Overtime

        section.container
            .row
                div.col-lg-12
                    .panel.panel-info.table-bordered
                        .panel-heading
                            | EmpID : {{application.empID}}
                            .pull-right Application Date : {{application.applicationDate}}
                        .panel-body
                            .col-lg-4
                                .form-group.has-warning
                                    label.control-label(for='date') Date
                                    input#date.form-control(type='date', name='date', ng-model="application.date", required,autofocus)
                            .col-lg-4
                                .form-group.has-warning
                                    label.control-label(for='from') From
                                    input#from.form-control(type='time', name='from', ng-model="application.from", value='{{application.from}}',required)
                            .col-lg-4
                                .form-group.has-warning
                                    label.control-label(for='to') To
                                    input#to.form-control(type='time', name='to', ng-model="application.to", value='{{application.to}}',required)
                            .col-lg-12
                                .form-group.has-warning
                                    label.control-label(for='reason') Reason
                                    textarea#reason.form-control(name='reason', ng-model="application.reason", required, readonly)
                            .col-lg-4
                            .col-lg-4
                                .form-group.has-success
                                    button.btn.btn-success(ng-click="Action('Approve')") Approve
                                    |&nbsp;|&nbsp;
                                    button.btn.btn-danger(ng-click="Action('Reject')") Reject
                        .panel-footer
                            table#dataTableHrOvertimeEmp.table.table-bordered.table-hover.table-striped(ng-table='dataTableHrOvertimeEmp', show-filter='true')
                                tr(ng-repeat='app in $data')
                                    td(data-title='"Date"', sortable='"date"', filter='{ "date": "text" }')
                                        | {{app.date}}
                                    td(data-title='"From"', sortable='"from"', filter='{ "from": "text" }')
                                        | {{app.from}}
                                    td(data-title='"To"', sortable='"to"', filter='{ "to": "text" }')
                                        | {{app.to}}
                                    td(data-title='"Status"', sortable='"status"')
                                        | {{app.status}}




